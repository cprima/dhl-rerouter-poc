mailboxes:
  # Example: Multiple mailboxes supported
  - name: personal
    type: imap
    access:
      user_env: MAILBOX_USER
      pass_env: MAILBOX_PASS
      # Credentials loaded from MAILBOX_USER, MAILBOX_PASS
    host: imap.example.com
    port: 993
    ssl: true
    folders:
      - INBOX
      - foo
    lookback_days: 28

  - name: hotmail-graph-device
    type: msgraph
    access:
      method: device_code  # Interactive device code flow
      user_env: HOTMAIL_MAILBOX_USER
      client_id: 11111111-1111-1111-1111-111111111111
      tenant_id: 00000000-0000-0000-0000-000000000000
      token_cache: msal_cache.bin
    folders:
      - INBOX
      - bar/tests
    lookback_days: 2

  - name: hotmail-graph-secret
    type: msgraph
    access:
      method: client_secret  # Service/daemon client credentials flow
      user_env: HOTMAIL_MAILBOX_USER
      client_id: 22222222-2222-2222-2222-222222222222
      client_secret_env: HOTMAIL_MAILBOX_SECRET
      tenant_id: 00000000-0000-0000-0000-000000000000
      token_cache: msal_cache.bin
    folders:
      - INBOX
    lookback_days: 2

  - name: hotmail-graph-cert
    type: msgraph
    access:
      method: certificate  # Certificate-based auth flow
      user_env: HOTMAIL_MAILBOX_USER
      client_id: 33333333-3333-3333-3333-333333333333
      certificate_path: /path/to/cert.pem
      tenant_id: 00000000-0000-0000-0000-000000000000
      token_cache: msal_cache.bin
    folders:
      - INBOX
    lookback_days: 2

tracking_patterns:
  DHL:
    - '\bJJD\d{10,}\b'
    - '\b0034\d{8,}\b'
  Hermes:
    - '\bHR\d{10}\b'
  UPS:
    - '\b1Z[0-9A-Z]{16}\b'
  DPD:
    - '\b0145\d{8}\b'
  eBay Global:
    - '\bEE\d{25}N\b'
  GLS:
    - '\b\d{11}\b'

# at top‐level in your example config
calendar:
  enabled: true
  url: "https://dav.mailbox.org/caldav/YOUR_CALDAV_PATH"
  lookahead_days: 1

carriers:
  base:
    selenium_headless: true
    highlight_only: true # default for all carriers unless overridden
    timeout: 20
  DHL:
    reroute_location: "MyAlternativeLocation"
    zip: 12345
    timezone: Europe/Berlin
    selenium_headless: true
    highlight_only: true    # if true, elements are only highlighted—not clicked
